generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  COLLABORATOR
  ADMIN
  DISPLAY
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum BenefitType {
  DISCOUNT
  PARTNERSHIP
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  password     String
  name         String
  role         Role        @default(COLLABORATOR)
  refreshToken String?
  bookings     Booking[]
  memberCard   MemberCard?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Space {
  id          String    @id @default(uuid())
  name        String    @unique
  value       Float
  photos      String[]
  description String?
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Booking {
  id        String        @id @default(uuid())
  date      DateTime      @db.Date
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  spaceId   String
  space     Space         @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@unique([spaceId, date])
  @@index([userId])
  @@index([spaceId])
  @@index([date])
}

model MemberCard {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  matricula Int      @unique
  photo     String?
  qrCode    String   @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([matricula])
}

model Benefit {
  id           String      @id @default(uuid())
  type         BenefitType
  name         String
  description  String?
  photos       String[]
  city         String
  street       String
  number       String
  neighborhood String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([type])
}
