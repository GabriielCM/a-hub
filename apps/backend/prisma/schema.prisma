generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  COLLABORATOR
  ADMIN
  DISPLAY
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum BenefitType {
  DISCOUNT
  PARTNERSHIP
}

enum PointsTransactionType {
  CREDIT
  DEBIT
  TRANSFER_IN
  TRANSFER_OUT
  ADJUSTMENT
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model User {
  id                String             @id @default(uuid())
  email             String             @unique
  password          String
  name              String
  role              Role               @default(COLLABORATOR)
  refreshToken      String?
  bookings          Booking[]
  memberCard        MemberCard?
  pointsBalance     PointsBalance?
  cart              Cart?
  orders            Order[]
  posts             Post[]
  postLikes                PostLike[]
  postComments             PostComment[]
  pushSubscriptions        PushSubscription[]
  likeNotificationHistory  LikeNotificationHistory[]
  createdAt                DateTime                   @default(now())
  updatedAt         DateTime           @updatedAt
}

model Space {
  id          String    @id @default(uuid())
  name        String    @unique
  value       Float
  photos      String[]
  description String?
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Booking {
  id        String        @id @default(uuid())
  date      DateTime      @db.Date
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  spaceId   String
  space     Space         @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@unique([spaceId, date])
  @@index([userId])
  @@index([spaceId])
  @@index([date])
}

model MemberCard {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  matricula Int      @unique
  photo     String?
  qrCode    String   @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([matricula])
}

model Benefit {
  id           String      @id @default(uuid())
  type         BenefitType
  name         String
  description  String?
  photos       String[]
  city         String
  street       String
  number       String
  neighborhood String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([type])
}

// ================================
// Sistema de Pontos do Associado
// ================================

model PointsBalance {
  id           String              @id @default(uuid())
  userId       String              @unique
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  balance      Int                 @default(0)
  transactions PointsTransaction[]
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
}

model PointsTransaction {
  id              String                @id @default(uuid())
  pointsBalanceId String
  pointsBalance   PointsBalance         @relation(fields: [pointsBalanceId], references: [id], onDelete: Cascade)
  type            PointsTransactionType
  amount          Int
  description     String
  relatedUserId   String?
  orderId         String?
  createdAt       DateTime              @default(now())

  @@index([pointsBalanceId])
  @@index([createdAt])
}

// ================================
// Loja do Associado
// ================================

model StoreItem {
  id           String          @id @default(uuid())
  name         String
  description  String?
  pointsPrice  Int
  stock        Int             @default(0)
  photos       String[]
  offerEndsAt  DateTime?
  isActive     Boolean         @default(true)
  cartItems    CartItem[]
  orderItems   OrderItem[]
  stockHistory StockMovement[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@index([isActive])
  @@index([offerEndsAt])
}

model StockMovement {
  id          String    @id @default(uuid())
  storeItemId String
  storeItem   StoreItem @relation(fields: [storeItemId], references: [id], onDelete: Cascade)
  quantity    Int
  reason      String
  createdAt   DateTime  @default(now())

  @@index([storeItemId])
}

model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id          String    @id @default(uuid())
  cartId      String
  cart        Cart      @relation(fields: [cartId], references: [id], onDelete: Cascade)
  storeItemId String
  storeItem   StoreItem @relation(fields: [storeItemId], references: [id], onDelete: Cascade)
  quantity    Int       @default(1)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([cartId, storeItemId])
  @@index([cartId])
}

model Order {
  id          String      @id @default(uuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  totalPoints Int
  status      OrderStatus @default(PENDING)
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
  @@index([status])
}

model OrderItem {
  id          String    @id @default(uuid())
  orderId     String
  order       Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  storeItemId String
  storeItem   StoreItem @relation(fields: [storeItemId], references: [id], onDelete: Cascade)
  quantity    Int
  pointsPrice Int
  createdAt   DateTime  @default(now())

  @@index([orderId])
}

// ================================
// Timeline Social - Posts
// ================================

model Post {
  id         String        @id @default(uuid())
  content    String
  photos     String[]
  authorId   String
  author     User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  isPinned                Boolean                   @default(false)
  pinnedAt                DateTime?
  pinnedById              String?
  likes                   PostLike[]
  comments                PostComment[]
  likeNotificationHistory LikeNotificationHistory[]
  createdAt               DateTime                  @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([authorId])
  @@index([isPinned])
  @@index([createdAt])
}

model PostLike {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, postId])
  @@index([postId])
}

model PostComment {
  id        String   @id @default(uuid())
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId])
  @@index([authorId])
}

// ================================
// Push Notifications
// ================================

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// ================================
// Notification History (Anti-Spam)
// ================================

model LikeNotificationHistory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, postId])
  @@index([postId])
}
