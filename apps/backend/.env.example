# Database
DATABASE_URL=postgresql://user:password@localhost:5432/a_hub?schema=public

# JWT Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Cloudinary (Image Upload)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Server
PORT=3001

# HTTPS Configuration (Development)
# Set to 'true' for local development with mkcert certificates
# Set to 'false' for production (Railway/Vercel handle SSL termination)
HTTPS_ENABLED=true
HTTPS_KEY_PATH=../../certs/localhost+3-key.pem
HTTPS_CERT_PATH=../../certs/localhost+3.pem

# Production URL
# Set this to your Vercel frontend URL in production
FRONTEND_URL=

# Push Notifications (VAPID)
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@cristofoli.com.br

# Spotify API (Jukebox)
# Create app at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=https://localhost:3001/api/jukebox/admin/callback

# Jukebox Token Encryption (32 char random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex').slice(0, 32))"
JUKEBOX_ENCRYPTION_KEY=
